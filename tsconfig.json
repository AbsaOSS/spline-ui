{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@env/*": [
        "src/environments/*"
      ],
      "@env": [
        "src/environments"
      ],
      "spline-api": [
        "projects/spline-api/src/public-api"
      ],
      "spline-api/*": [
        "projects/spline-api/src/public-api/*"
      ],
      "spline-common": [
        "projects/spline-common/src/public-api"
      ],
      "spline-common/*": [
        "projects/spline-common/src/public-api/*"
      ],
      "spline-shared": [
        "projects/spline-shared/src/public-api"
      ],
      "spline-shared/*": [
        "projects/spline-shared/src/public-api/*"
      ],
      "spline-utils": [
        "projects/spline-utils/src/public-api"
      ],
      "spline-utils/*": [
        "projects/spline-utils/src/public-api/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "projects/**/*"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
